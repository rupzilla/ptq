<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% if (flash.error) { %>
      <p class="error">
      	<%= flash.error %>
      </p>
    <% } %>
    <form action="/simple_action" method="post">
      Simple input:<br>
      <input type="text" name="simple_input" value="<%= flash.simple_input ? flash.simple_input : '' %>"><br>
      <% if (flash.errors.simple_field) { %>
        <div class="error">
          <%= flash.errors.simple_field.join('; ') %>
        </div>
      <% } %>
      Other input:<br>
      <input type="text"><br>
      <input type="submit" value="Test!">
    </form>
  </body>
</html>